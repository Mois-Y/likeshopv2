.cart-num {
    background-color: var(--primary-color);
    min-width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 60rpx;
    top: 6rpx;
    border-radius: 60rpx;
}

/* 空状态 */
.goods-details-null .details-null {
    padding-top: 140rpx;
    margin-bottom: 100rpx;
}